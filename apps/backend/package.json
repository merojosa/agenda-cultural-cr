{
	"name": "backend",
	"version": "0.3.0",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"run": "yarn build && sls invoke local --function update-theater-data",
		"build": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --packages=external --target=node18 --outdir=dist",
		"deploy:dev": "tsc && yarn run build && sls deploy --stage dev",
		"lint": "prettier --check --ignore-path=../../.prettierignore . && eslint \"src\""
	},
	"dependencies": {
		"db-schema": "*",
		"drizzle-orm": "^0.28.2",
		"luxon": "^3.4.0",
		"postgres": "^3.3.5",
		"puppeteer-core": "^21.0.3"
	},
	"devDependencies": {
		"@sparticuz/chromium": "^115.0.0",
		"@types/luxon": "^3.3.1",
		"@types/node": "^18.17.4",
		"esbuild": "^0.19.2",
		"serverless": "^3.34.0",
		"serverless-offline": "^12.0.4",
		"tsconfig": "*",
		"typescript": "^5.1.6"
	}
}

{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "es2022",
    "sourceMap": true,
    "paths": {
      "@scraping/*": ["./src/scraping/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "dist/**"]
		},
		"test": {
			"dependsOn": ["lint"]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		// https://turbo.build/repo/docs/core-concepts/monorepos/task-dependencies#from-dependent-workspaces
		"backend#run": {
			"dependsOn": ["build"]
		},
		"backend#deploy:dev": {
			"dependsOn": ["build"]
		},
		"db#generate": {
			"dependsOn": ["^build"]
		},
		"web#deploy:dev": {
			"dependsOn": ["build"]
		}
	}
}
